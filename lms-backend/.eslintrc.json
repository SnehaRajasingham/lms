{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "plugins": ["prettier"],
  "overrides": [
    {
      "files": ["**/*.test.js", "tests/**/*.js"],
      "env": {
        "jest": true
      }
    }
  ],
  "rules": {
    "prettier/prettier": ["error"],
    "no-unused-vars": "warn",
    "no-console": "off"
  }
}
